#define _CRT_SECURE_NO_WARNINGS 1
#include <stdio.h>
#include <stdlib.h>
int main()
{
	int arr[10];
	int i;
	int j;
	printf("请输入10个整数: \n");
	for (i = 0; i < 10; i++)
	{
		scanf("%d", &arr[i]);
	}//输入十个整数
	for (i = 0; i < 10; i++)
	{
		if (arr[0] < arr[i + 1])//比较数字大小
		{
			j = arr[i + 1];
			arr[i + 1] = arr[0];
			arr[0] = j;
		}
	}
	printf("十个数中的最大值为:%d ", arr[0]);
	return 0;
}
