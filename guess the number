#define _CRT_SECURE_NO_WARNINGS 1
#include <stdio.h>
#include <stdlib.h>
#include <time.h>
//1.猜数字游戏
void menu()//游戏菜单界面
{
	printf("----------------------------------\n");
	printf("-------------- 1.play ------------\n");
	printf("-------------- 0.exit ------------\n");
	printf("----------------------------------\n");
}
void game()//游戏内容
{
	int random_num = rand() % 100 + 1;
	int input = 0;
	while (1)
	{
		printf("请输入要猜的数字： ");
		scanf("%d", &input);
		if (input < random_num)
		{
			printf("猜小了\n");
		}
		else if (input>random_num)
		{
			printf("猜大了\n");
		}
		else
		{
			printf("猜对了！\n");
			break;
		}
	}
}
int main()//进入游戏前菜单判断
{
	int input = 0;
	srand((unsigned)time(NULL));
	do
	{
		menu();
		printf("请输入数字：\n");
		scanf("%d", &input);
		switch (input)
		{
		case 1:
			game();
			break;
		case 0:
			break;
		default:
			printf("输入错误\n");
		}
	} while (input);

	return 0;
}
